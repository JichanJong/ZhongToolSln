<Window x:Class="ZhongTool.FrmAndroidTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhongTool"
        mc:Ignorable="d"
        Title="FrmAndroidTool" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="路径" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox x:Name="txtPath" Grid.Column="1" Grid.ColumnSpan="2"></TextBox>
        <Button x:Name="btnOpen" Content="..." Grid.Column="3" Margin="3" Click="btnOpen_Click"></Button>
        <Button x:Name="btnGenerate" Content="生成" Grid.Column="4" Margin="3" Click="btnGenerate_Click"></Button>
        <TextBox x:Name="txtCode" TextWrapping="Wrap" AcceptsReturn="True" Grid.Row="1" Grid.ColumnSpan="5" FontSize="16"></TextBox>
    </Grid>
</Window>
