<Window x:Class="ZhongTool.FrmBase64"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhongTool"
        mc:Ignorable="d"
        Title="Base64加密解密" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtInput" TextWrapping="Wrap" Grid.ColumnSpan="3" AcceptsReturn="True"></TextBox>
        <Button x:Name="btnEncrypt" Content="加密" Grid.Row="1" Grid.Column="0" Margin="10 0" Click="BtnEncrypt_OnClick"></Button>
        <Button x:Name="btnDEncrypt" Content="解密" Grid.Row="1" Grid.Column="2" Margin="5 0" Click="BtnDEncrypt_OnClick"></Button>
        <TextBox x:Name="txtResult" TextWrapping="Wrap" Grid.Row="2" Grid.ColumnSpan="3"></TextBox>
    </Grid>
</Window>
