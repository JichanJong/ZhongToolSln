<Window x:Class="ZhongTool.FrmMD5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZhongTool"
        mc:Ignorable="d"
        Title="MD5加密" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox TextWrapping="Wrap" x:Name="txtSource" Grid.Column="0" Grid.ColumnSpan="3"></TextBox>
        <Button Content="加密" x:Name="btnEncrypt" Grid.Column="1" Grid.Row="1" Click="BtnEncrypt_OnClick"></Button>
        <TextBox TextWrapping="Wrap" x:Name="txtResult" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"></TextBox>
    </Grid>
</Window>
